{
    "printWidth": 9999,
    "trailingComma": "none",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 250,
                "htmlWhitespaceSensitivity": "ignore",
                "bracketSameLine": true
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "options": {
            }
        },
        {
            "files": ["*.css", "*.scss", "*.less"],
            "options": {
                "singleQuote": false
            }
        }
    ]
}
